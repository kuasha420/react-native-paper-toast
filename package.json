{
  "name": "react-native-paper-toast",
  "version": "1.2.0",
  "description": "A toast implementation for React Native Paper",
  "main": "dist/commonjs/index.js",
  "module": "dist/module/index.js",
  "react-native": "src/index.tsx",
  "source": "src/index.tsx",
  "types": "dist/typescript/src/index.d.ts",
  "files": [
    "src",
    "dist",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__",
    "/dist",
    "package.json",
    "LICENSE"
  ],
  "repository": "https://github.com/kuasha420/react-native-paper-toast",
  "keywords": [
    "react-native-paper",
    "react-native",
    "toast"
  ],
  "author": "Arafat Zahan",
  "license": "MIT",
  "peerDependencies": {
    "react": ">=16.8",
    "react-native": ">=0.59.0",
    "react-native-paper": ">=4",
    "react-native-safe-area-context": ">=3",
    "react-native-vector-icons": ">=6"
  },
  "scripts": {
    "bootstrap": "yarn example && yarn",
    "example": "yarn --cwd example",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "prepare": "rm -rf ./dist/* && bob build"
  },
  "devDependencies": {
    "@react-native-community/eslint-config": "^2.0.0",
    "@types/react-native": "^0.67.3",
    "@types/react-native-vector-icons": "^6.4.5",
    "eslint": "^7.10.0",
    "expo": "^44.0.6",
    "prettier": "^2.1.2",
    "react": "^16.13.1",
    "react-native": "^0.63.3",
    "react-native-builder-bob": "^0.18.2",
    "react-native-paper": "^4.2.0",
    "react-native-safe-area-context": "^3.1.8",
    "react-native-vector-icons": "7.1.0",
    "typescript": "^4.0.3"
  },
  "resolutions": {
    "@types/react": "^17"
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "dist",
    "targets": [
      "commonjs",
      "module",
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  },
  "eslintIgnore": [
    "node_modules/",
    "dist/"
  ]
}
